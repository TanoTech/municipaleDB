@{
    ViewData["Title"] = "Elenco trasgressori";
}

<div class="container">
    <h1>Elenco trasgressori</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Cognome</th>
                <th>Nome</th>
                <th>Indirizzo</th>
                <th>Città</th>
                <th>CAP</th>
                <th>Codice Fiscale</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var trasgressore in Model)
            {
                <tr>
                    <td>@trasgressore.ID</td>
                    <td>@trasgressore.Cognome</td>
                    <td>@trasgressore.Nome</td>
                    <td>@trasgressore.Indirizzo</td>
                    <td>@trasgressore.Città</td>
                    <td>@trasgressore.CAP</td>
                    <td>@trasgressore.CF</td>
                </tr>
            }
        </tbody>
    </table>
</div>